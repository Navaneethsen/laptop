fancy_echo "Adding ssh-keys to remote hosts ..."
  fancy_echo "Please enter your ldap password when asked for ..."
  ssh-copy-id git.corp.flipkart.com
### end sms-components/add-ssh-key

fancy_echo "Setting up phabricator for code reviews ... You'll have to create a phabricator account by logging in to http://phabricator.corp.flipkart.com ..."
  mkdir -p ~/dev/phabricator
  cd ~/dev/phabricator
  git clone git://github.com/facebook/libphutil.git
  git clone git://github.com/facebook/arcanist.git
  echo "export PATH=$PATH:~/dev/phabricator/arcanist/bin" >> ~/.zprofile

  source ~/.zshrc
### end sms-components/arc

fancy_echo "Setting up a few configs ..."
  npm config set registry http://npm.stage.ch.flipkart.com/registry/
### end sms-components/config

fancy_echo "Cloning the sms repo ..."
  mkdir -p ~/dev/
  git clone git.corp.flipkart.com:/git/sp/sms sms

  fancy_echo "Setting up sms backend ..."
    cd ~/dev/sms/sp-onboarding-be
    mkdir uploads
    mkdir logs

    npm install

  fancy_echo "Setting up mysql database ..."
    echo "create database seller_platform" | mysql -uroot
    echo 'create database seller_platform_audit;' | mysql -uroot
    ./.bin/sequelize --migrate

  fancy_echo "Setting up seller dashboard ..."
    cd ~/dev/sms/sp-seller-dashboard/sp-seller-dashboard
    mkdir pidServer
    mkdir logs

    npm install

  fancy_echo "Installing the arc certificate ..."
    arc install-certificate
### end sms-components/sms

